<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:adjustViewBounds="true"
    android:background="@color/viewBg">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_trailer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen100"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen5"
        card_view:cardCornerRadius="@dimen/dimen0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/viewBg2">
            
            <ImageView
                android:id="@+id/image_youtube"
                android:layout_width="@dimen/dimen50"
                android:layout_height="@dimen/dimen100"
                android:src="@drawable/youtube"
                android:layout_marginLeft="@dimen/dimen16"
                android:layout_marginStart="@dimen/dimen16"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            
            <TextView
                android:id="@+id/trailer_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen10"
                android:paddingRight="@dimen/dimen10"
                android:paddingTop="@dimen/dimen10"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font15"
                android:layout_toRightOf="@+id/image_youtube"
                android:layout_toEndOf="@id/image_youtube"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>